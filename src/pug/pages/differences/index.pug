- const title = 'Differences - Find them All'
- const descr = 'Can you spot the difference?'
- const domain = 'lemons.studio'

include ../../components/_iconsAppstore

html(lang="en")
    head
        meta(charset="UTF-8")
        title= title
        meta(name="description" content=descr)

        //- PWA meta
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, viewport-fit=cover")
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        meta(name='apple-mobile-web-app-capable', content='yes')
        meta(name='apple-mobile-web-app-status-bar-style', content='default')
        meta(name='format-detection', content='telephone=no')

        //- Og meta
        meta(property='og:title', content=title)
        meta(property='og:description', content=descr)
        meta(property='og:type', content='website')
        meta(property='og:image', content=`https://${domain}/assets/img/differences/icon@2x.jpg`)
        //- meta(property='og:image:width', content='1200')
        //- meta(property='og:image:height', content='630')

        //- Favicon (realfavicongenerator.net)
        link(rel="apple-touch-icon", sizes="180x180", href="./favicon/apple-touch-icon.png")
        link(rel="icon", type="image/png", sizes="32x32", href="./favicon/favicon-32x32.png")
        link(rel="icon", type="image/png", sizes="16x16", href="./favicon/favicon-16x16.png")
        link(rel="manifest", href="./favicon/site.webmanifest")
        link(rel="mask-icon", href="./favicon/safari-pinned-tab.svg", color="#ffcb01")
        meta(name="msapplication-TileColor", content="#ffffff")
        meta(name="msapplication-config", content="./favicon/browserconfig.xml")
        meta(name="theme-color", content="#ffffff")

        //- Styles
        link(rel="stylesheet", href="/css/appstore.css")
        // Facebook Pixel Code
        script.
            !function(f,b,e,v,n,t,s)
            {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
            n.callMethod.apply(n,arguments):n.queue.push(arguments)};
            if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
            n.queue=[];t=b.createElement(e);t.async=!0;
            t.src=v;s=b.getElementsByTagName(e)[0];
            s.parentNode.insertBefore(t,s)}(window, document,'script',
            'https://connect.facebook.net/en_US/fbevents.js');
            fbq('init', '825767187808741');
            fbq('track', 'PageView');
        noscript
            img(height='1', width='1', style='display:none', src='https://www.facebook.com/tr?id=825767187808741&ev=PageView&noscript=1')
        // End Facebook Pixel Code

    body
        main.wrap
            .store
                .store_app
                    .store_app_icon
                        img(srcset="/assets/img/differences/icon@2x.jpg 2x, /assets/img/differences/icon.jpg 1x" src="/assets/img/differences/icon.jpg", alt="")
                    .store_app_info
                        .store_app_info_top
                            p.store_app_title
                                =title
                            small.store_app_slogan
                                =descr
                        .store_app_info_bottom
                            button#get.button
                                | GET
                ul.store_features
                    li.store_feature
                        .store_feature_icon
                            each _ in Array(4)
                                +icon('star', [18, 16])
                            +icon('halfstar', [8, 16])
                        p.store_feature_label
                            | 4.6, 99.7K Ratings
                    li.store_feature
                        .store_feature_icon
                            span No
                            | 24
                        p.store_feature_label
                            | Board
                    li.store_feature
                        .store_feature_icon
                            | 4+
                        p.store_feature_label
                            | Age Rating
                .slider
                    each _, i in Array(5)
                        .slider_item
                            img(srcset=`/assets/img/differences/screenshots/${i+1}@2x.jpg 2x, /assets/img/differences/screenshots/${i+1}.jpg 1x` src=`/assets/img/differences/screenshots/${i+1}.jpg` alt=`Screenshot ${i+1}`)
                .content
                    p
                        | Spot all the differences between two pictures! Focus on the details and train your brain!
                    p
                        | Test your detection and concentration skills to see how many differences you can find in two seemingly identical images.

        script(src="/js/differences.min.js")